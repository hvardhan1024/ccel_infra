{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3AccessForPortfolioApp",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:PutObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::portfolio-app-*/*"
      ]
    },
    {
      "Sid": "S3ListBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::portfolio-app-*"
      ]
    }
  ]
}